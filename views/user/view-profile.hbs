<div class="bg-info p-1">
    <button class="btn btn-secondary text-white btn-sm  ms-3" id="back">Go Back</button>
</div>
<section>
    <div class="page-content page-container" id="page-content">
        <div class="padding">
            <div class="row container d-flex justify-content-center">
                <div class="col-xl-6 col-md-12">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-c-lite-green user-profile">
                                <div class="card-block text-center text-white">
                                    {{#if userData.photo}}
                                    <div class="m-b-25"> <img src="{{userData.photo}}"
                                            class="img-fluid rounded-circle roundbox " alt="User-Profile-Image"
                                            style="height: 15rem"> </div>
                                    {{else}}
                                    <div class="m-b-25"> <img src="/images/profile.png"
                                            class="img-fluid rounded-circle roundbox " alt="User-Profile-Image"> </div>
                                    {{/if}}

                                    <a href="/crop-images/{{userData._id}}" class="btn btn-dark btn-sm ms-3">Edit
                                        image</a>
                                    <h6 class="f-w-600">{{userData.fname}}</h6>
                                    <p>{{userData.email}}</p> <i
                                        class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>

                                    <h2 class="fs-4 text-start">{{userData.address}}</h2>
                                    <h2 class="fs-4 text-start">{{userData.place}}</h2>
                                    <h2 class="fs-4 text-start">{{userData.district}}</h2>
                                    <h5 class="fs-6 text-start">{{userData.pincode}}</h2>

                                        <a href="/view-orders" style="text-decoration: none;">
                                            <h4 class="fs-6  text-info bg-dark my-4"> View My Orders</h4>
                                        </a>
                                        <a href="/view-offers" style="text-decoration: none;">
                                            <h4 class="fs-6  text-info bg-dark my-4"> My Offer zone</h4>
                                        </a>
                                        <a class="nav-link" href="/logout"> <button class="btn  text-white fw-bold"
                                                type="submit"
                                                style="background-color: rgb(84, 59, 65) ;">Logout</button></a>

                                </div>
                            </div>
                            <div class="col-sm-8">
                                <form action="" method="post" name="addressForm" id="addressForm"
                                    onsubmit=" return validateProfile()">
                                    <div class="card-block">
                                        <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Edit my profile</h6>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600"> first Name</p>

                                                <input type="text" value="{{userData.fname}}" name="fname" id="fname">
                                                <span class="text-danger bg-light fw-bold h6" id="fnamemsg"></span>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600">Last Name</p>

                                                <input type="text" value="{{userData.lname}}" name="lname" id="lname">
                                                <span class="text-danger bg-light fw-bold h6" id="lnamemsg"></span>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600">Email</p>

                                                <input type="email" value="{{userData.email}}" name="email" id="email">
                                                <span class="text-danger bg-light fw-bold h6" id="emailmsg"></span>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600">Phone</p>
                                                <input type="number" value="{{userData.number}}" name="number"
                                                    id="number">
                                                <span class="text-danger bg-light fw-bold h6" id="mobmsg"></span>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600 mt-3">Add/Edit Address</p>
                                                <label for="address">Address</label>
                                                <input type="text" value="{{userData.address}}" placeholder="Address"
                                                    name="address" id="address">
                                                <span class="text-danger bg-light fw-bold h6" id="addmsg"></span>

                                                <label for="place">Place</label>
                                                <input type="text" value="{{userData.place}}" placeholder="Place"
                                                    name="place" id="place">
                                                <span class="text-danger bg-light fw-bold h6" id="placemsg"></span>
                                                <label for="district">District</label>
                                                <input type="text" value="{{userData.district}}" placeholder="District"
                                                    name="district" id="district">
                                                <span class="text-danger bg-light fw-bold h6" id="distmsg"></span>
                                                <label for="pincode">Pincode</label>
                                                <input type="number" value="{{userData.pincode}}" placeholder="Pincode"
                                                    name="pincode" id="pincode">
                                                <span class="text-danger bg-light fw-bold h6" id="pinmsg"></span>
                                            </div>
                                            <div class="mt-5">
                                                <button class="btn btn-primary " type="submit"> Save Changes</button>
                                            </div>
                                        </div>

                                </form>
                                <div class="row">
                                </div>
                                <ul class="social-link list-unstyled m-t-40 m-b-10">
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title=""
                                            data-original-title="facebook" data-abc="true"><i
                                                class="mdi mdi-facebook feather icon-facebook facebook"
                                                aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title=""
                                            data-original-title="twitter" data-abc="true"><i
                                                class="mdi mdi-twitter feather icon-twitter twitter"
                                                aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title=""
                                            data-original-title="instagram" data-abc="true"><i
                                                class="mdi mdi-instagram feather icon-instagram instagram"
                                                aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>

<div class="bg-info">

</div>