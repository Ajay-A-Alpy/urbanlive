<section>
    {{>admin-new}}
</section>


<section>
  <div class="container">
    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-10 mt-4">
        <div class="list-group">
          <a href="#" class="list-group-item  bg-info  fw-bold text-center list-group-item-action " aria-current="true" >
            YOUR CATEGORIES
          </a>
          <table class="table table-light table-striped  table-hover ">
            <thead class="">
              <tr>
                <th scope="col">No</th>
                <th scope="col">category </th>
                <th scope="col">Sub-category</th>
                <th scope="col"></th>
                <th scope="col">Offer zone</th>
                <th scope="col">Current Offer</th>
                <th scope="col">Start date</th>
              </tr>
            </thead>
            <tbody>
              {{#each categoryList}}
              <tr>
                <th scope="row">{{counter @index}}</th>
                <td>{{this.name}}</td>
                <td>{{this.sub}}</td>
                <td> <a class="btn btn-sm btn-danger ms-1" type="submit" href="/admin/delete-category/{{this.sub}}"
                    onclick="return confirm('Are you want to delete {{this.pname}}?')"><i class="bi bi-trash-fill"></i></a></td>
                <td>
                  <div class="d-flex" style="width: 10rem;">
                    <a class="btn btn-sm btn-secondary ms-1" type="submit"
                      href="/admin/add-category-offer/{{this.sub}}">Add Offer <i class="bi bi-file-plus"></i></a>
                  </div>
                <td>{{#if offerValue}}
                  {{this.offerValue}} %
                  {{/if}}
                </td>
                    {{#if offerStart}}
                <td>{{ date this.offerStart}} </td>
                {{else}} <td></td>
                    {{/if}}

              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <div class="row my-3">
          <div class="w-50">
 <a href="/admin/add-category" class="btn btn-success "> Add New Category</a>
          </div>
         
        </div>
      </div>
      <div class="col-md-1"></div>
    </div>
  </div>
</section>