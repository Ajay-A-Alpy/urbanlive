<section>
    {{>admin-new}}
</section>


<section>
    <div class="container-fluid" style="background-color:white ;">
        <div class="row" >

<div class="col-md-12 col-lg-4 mx-auto  vh-75 p-3" style="background-color: khaki;">
<form class="text-center text-dark fw-bold" method="post" enctype="multipart/form-data" action="/admin/edit-product/{{product._id}}" onsubmit="return validateEditPro()"  name="AddPro" id="AddPro">
       <h3 class="mt-3 fs-4">CHANGE PRODUCT DETAILS</h3>
  <div class="mt-3">
    <label for="pname" class="form-label">Name</label>
    <input type="text" class="form-control" id="pname"  name="pname" value="{{product.pname}}" >
    <span class="text-danger bg-light fw-bold h6" id="pnamemsg"></span>
  </div>
  <div class="mt-3">
    <label for="category" class="form-label me-3 text-secondary">Category : </label>
  <select id="subcat" name="sub" class="form-control">
       {{#each categories}}
    <option value="{{this.sub}}">{{this.sub}}</option>
     {{/each}}
  </select>

  </div> 
    <div class="mt-3">
    <label for="description" class="form-label">Description-small</label>
    <input type="text" class="form-control" id="description"  name="description" value="{{product.description}}" >
     <span class="text-danger bg-light fw-bold h6" id="des1msg"></span>
  </div>

  <div class="mt-3">
    <label for="description" class="form-label">Description-main</label>
    <input type="text" class="form-control" id="description2"  name="description2" value="{{product.description2}}" >
     <span class="text-danger bg-light fw-bold h6" id="des2msg"></span>
  </div>

 <div class="mt-3">
    <label for="price" class="form-label">Price</label>
    <input type="number" class="form-control" id="price"  name="price" value="{{product.price}}">
     <span class="text-danger bg-light fw-bold h6" id="pricemsg"></span>

  </div>

   <div class="mt-3">
    <label for="offer" class="form-label">Delivery offer</label>
    <input type="text" class="form-control" id="offer"  name="offer" value="{{product.offer}}" >
     <span class="text-danger bg-light fw-bold h6" id="offermsg"></span>
  </div>

    

   <span class="mt-3">
    <label for="discount" class="form-label">Discount</label>
    <input type="number" class="form-control" id="discount"  name="discount" value="{{product.discount}}" placeholder="Discount in Percentage"  max="90">
   </span>

    <span class="mt-3 btn btn-secondary btn-sm">

    <label for="applydiscount" class="form-label">Apply Discount</label>
   <input type="checkbox" value="true" name="offerStatus" checked>
   </span>
     <span class="mt-3 btn btn-secondary btn-sm">
     <label for="applydiscount" class="form-label">Remove Discount</label>
   <input type="checkbox" value="false" name="offerStatus" >
   </span>





 
    <div class="mt-3">
    <label for="image" class="form-label">Image</label>
    <img src="/product-images/{{product._id}}.jpg" alt="image" style="width: 50px; height:50px">
    <input type="file" class="form-control" id="image"  name="image" >
                 <span class="text-danger bg-light fw-bold h6" id="imgmsg"></span>
  </div>
 


 <div> <button type="submit" class="btn text-white mt-3" style="background-color:rgb(47, 70, 33) ;">Save Changes</button>
</div>
 
</form>



</div>


        </div>
    </div>
</section>