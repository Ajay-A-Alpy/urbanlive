  {{>admin-new}}
</section>


<section>
  <div class="container " style="background-color:rgb(162, 130, 138);">
    <div class="row pb-3">
      <div class="col-md-12 col-lg-4 login mx-auto pb-1 vh-75">

        <form class="text-center text-dark fw-bold" method="post" enctype="multipart/form-data" onsubmit="return validateAddPro()" 
          action="/admin/add-products" name="AddPro" id="AddPro" >
          <h3 class="mt-3">ADD NEW PRODUCT</h3>
          <div class="mt-3">
            <label for="pname" class="form-label">Name</label>
            <input type="text" class="form-control" id="pname" name="pname" minlength="3"  >
             <span class="text-danger bg-light fw-bold h6" id="pnamemsg"></span>
          </div>
          <div class="mt-3">
            <label for="category" class="form-label me-3 text-dark">Category  </label>
            <select id="subcat" name="subcategory" class="form-control ">
                  <option value="" disabled>choose category</option>
              {{#each  categories}}
          
              <option value="{{this.sub}}">{{this.sub}}</option>
              {{/each}}
            </select>
          </div>

          <div class="mt-3">
            <label for="description" class="form-label">Description-small</label>
            <input type="text" class="form-control" id="description" name="description" min="10" >
                <span class="text-danger bg-light fw-bold h6" id="des1msg"></span>
          </div>
          <div class="mt-3">
            <label for="description" class="form-label">Description-main</label>
            <input type="text" class="form-control" id="description2" name="description2" min="20" >
              <span class="text-danger bg-light fw-bold h6" id="des2msg"></span>
          </div>
          <div class="mt-3">
            <label for="price" class="form-label">Price Rs-</label>
            <input type="number" class="form-control" id="price" name="price"  >
             <span class="text-danger bg-light fw-bold h6" id="pricemsg"></span>
          </div>
          <div class="mt-3">
            <label for="offer" class="form-label">Offer</label>
            <input type="text" class="form-control" id="offer" name="offer">
             <span class="text-danger bg-light fw-bold h6" id="offermsg"></span>
          </div>
          <div class="mt-3">
            <label for="image" class="form-label">Image</label>
            <input type="file" class="form-control" id="image" name="image" accept="image/*" >
             <span class="text-danger bg-light fw-bold h6" id="imgmsg"></span>
          </div>
          <div><button type="submit" class="btn text-white mt-3" style="background-color:rgb(47, 70, 33) ;">Add
              Now</button>
          </div>
        </form>
      </div>
    </div>
</section>