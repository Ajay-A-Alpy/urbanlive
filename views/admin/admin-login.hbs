<section>
    <div class="container" style="background-color: rgb(162, 130, 138);">


       
        <div class="row mt-5">

            <div class="col-md-4"></div>

            <div class="col-md-3 login mt-5">

                <form class="text-center text-white" name="loginform" id="loginform" method="post" action="">
                    <h3 class="mt-3"> ADMIN LOGIN</h3>
                    <div class="mt-3">
                        <div class="text-danger text-center fw-bold bg-light">{{message}}</div>
                        <label for="exampleInputEmail1" class="form-label">Enter your E-mail</label>
                        <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" value="ajay@gmail.com">

                    </div>
                    <div class="mb-4">
                        <label for="exampleInputPassword1" class="form-label"> Enter your Password</label>
                        <input type="password" class="form-control" id="password" name="password" value="ajay123">
                    </div>

                    <button onsubmit="return validate()" type="submit" class="btn text-white"
                        style="background-color:rgb(47, 70, 33) ; ">Submit</button>
                    <h5 class="mt-2">or</h5>
                    <a href="/otplogin" type="submit" class="btn text-white mt-1"
                        style="background-color:rgb(47, 70, 33) ;">Get OTP</a>
                    <a class="fw-bold " href="/admin/signup" style="text-decoration: none;">
                        <h6 class="mt-5 text-dark fw-bold"> Create Admin Account Now</h6>
                    </a>


                </form>



            </div>
            <div class="col-md-3"></div>

        </div>
    </div>
</section>

<script>
    function validate() {

        var email = document.getElementById('email').value
        var password = document.getElementById('password').value

        if (email == null) {
            document.loginform.email.focus();
            return false
        }

        if (password == null) {
            document.loginform.password.focus();
            return false
        }

        return true;

    }


</script>