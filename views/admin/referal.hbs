
<section>
    {{>admin-new}}
</section>
<section>
    <div class="container-fluid" style="background-color:white ;">
        <div class="row">
            <div class="col-md-4 mt-4 text-center p-3">
                {{#if extReferal}}
         
                <div class="card" style="width: 18rem;">
              <div class="bg-secondary text-secondary">...</div>
                    <div class="card-body">
                        <h5>CURRENT  REFERAL OFFER</h5>  
                        <h6>Discount:{{extReferal.discount}}%</h6>
                        <h6>Start:{{extReferal.startDate}}</h6>
                           <h6>End:{{extReferal.endDate}}</h6>
                              
                        <button class="btn btn-primary" onclick="deleteReferal('{{extReferal._id}}')">REMOVE OFFER</button>
                    </div>
                </div>
                {{/if}}
            </div>
            <div class="col-md-3  vh-75 p-3 m-3" style="background-color: khaki;">
                <form class="text-center text-dark fw-bold" method="post" 
                    action="/admin/referal-offer">
                    <h3 class="mt-3 fs-4">START A REFERAL OFFER</h3>
                    <div class="mt-3">
                        <label for="startDate" class="form-label">START DATE</label>
                        <input type="date" class="form-control" id="startDate"  min="{{day}}" name="startDate" required>
                    </div>
                    <div class="mt-3">
                        <label for="endDate" class="form-label">END DATE</label>
                        <input type="date" class="form-control" id="endDate" name="endDate"  min="{{day}}" required>
                    </div>
                    <div class="mt-3">
                        <label for="discount" class="form-label">DISCOUNT IN PERCENTAGE</label>
                        <input type="discount" class="form-control" id="CoupenDiscount" name="discount">
                    </div>
                    <div> <button type="submit" class="btn text-white mt-3"
                            style="background-color:rgb(47, 70, 33) ;">START</button>
                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</section>